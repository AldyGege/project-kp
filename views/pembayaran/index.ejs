<%- include('../partials/__head.ejs') %>
<body>
<div class="container-scroller">
    <%- include('../partials/__nav.ejs') %>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Data Pembayaran</h4>
                                <a href="/pembayaran/create" class="btn btn-sm btn-success mb-3">Tambah</a>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Status Pembayaran</th>
                                                <th>Jumlah</th>
                                                <th>Menu</th>
                                                <th>User</th>
                                                <th colspan="2">Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i=0; i < data2.length; i++){ %>
                                            <tr>
                                                <th scope="row"><%= (i+1) %></th>
                                                <td><%= data2[i].status_pemesanan %></td>
                                                <td><%= data2[i].jumlah %></td>
                                                <td><%= data2[i].nama_menu %></td>
                                                <td><%= data2[i].nama_users %></td>
                                                <td>
                                                    <a href="/pembayaran/edit/<%= data2[i].id_pembayaran %>" class="btn btn-sm btn-warning">Edit</a>
                                                    <a href="/pembayaran/delete/<%= data2[i].id_pembayaran %>" class="btn btn-sm btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/__foot.ejs') %>
</body>
