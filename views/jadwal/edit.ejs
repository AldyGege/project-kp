<%- include('../partials/__head.ejs') %>
<body>
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <%- include('../partials/__nav.ejs') %>
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <h3>Selamat datang di Halaman Admin</h3>
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Edit Data Jadwal</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>
                        <form action="/jadwal/update/<%= id %>" method="POST" enctype="multipart/form-data" class="forms-sample">
                            <div class="form-group">
                                <label for="exampleFormControlSelect2">Nama Dokter</label>
                                <select class="form-control" id="exampleFormControlSelect2" name="id_dokter" required>
                                    <option value="<%= id_dokter %>"><%= nama_dokter %></option>
                                    <% for(var i=0; i < data.length; i++){ %>
                                        <option value="<%= data[i].id_dokter %>"><%= data[i].nama_dokter %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="senin">Senin</label>
                                <input type="text" class="form-control" id="senin" name="senin" value="<%= senin %>">
                            </div>
                            <div class="form-group">
                                <label for="selasa">Selasa</label>
                                <input type="text" class="form-control" id="selasa" name="selasa" value="<%= selasa %>">
                            </div>
                            <div class="form-group">
                                <label for="rabu">Rabu</label>
                                <input type="text" class="form-control" id="rabu" name="rabu" value="<%= rabu %>">
                            </div>
                            <div class="form-group">
                                <label for="kamis">Kamis</label>
                                <input type="text" class="form-control" id="kamis" name="kamis" value="<%= kamis %>">
                            </div>
                            <div class="form-group">
                                <label for="jumat">Jumat</label>
                                <input type="text" class="form-control" id="jumat" name="jumat" value="<%= jumat %>">
                            </div>
                            <div class="form-group">
                                <label for="sabtu">Sabtu</label>
                                <input type="text" class="form-control" id="sabtu" name="sabtu" value="<%= sabtu %>">
                            </div>
                            <div class="form-group">
                                <label for="minggu">Minggu</label>
                                <input type="text" class="form-control" id="minggu" name="minggu" value="<%= minggu %>">
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Simpan</button>
                            <button type="button" class="btn btn-light" onclick="history.back()">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- container-scroller ends -->
<%- include('../partials/__foot.ejs') %>
</body>
</html>
