        <script>
            // Script to handle quantity increment and decrement for all input groups
            document.querySelectorAll('.input-group').forEach(function (inputGroup) {
                const plusButton = inputGroup.querySelector('.btn-plus');
                const minusButton = inputGroup.querySelector('.btn-minus');
                const quantityInput = inputGroup.querySelector('.quantity-input');

                plusButton.addEventListener('click', function () {
                    let value = parseInt(quantityInput.value);
                    quantityInput.value = value + 1;
                });

                minusButton.addEventListener('click', function () {
                    let value = parseInt(quantityInput.value);
                    if (value > 1) {
                        quantityInput.value = value - 1;
                    }
                });
            });
        </script>


