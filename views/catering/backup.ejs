        <script>
            // JavaScript untuk filter kartu makanan
            function filterCards(category) {
                var cards = document.getElementsByClassName('food-card');
                for (var i = 0; i < cards.length; i++) {
                    cards[i].classList.remove('active');
                    if (category === 'all' || cards[i].classList.contains(category)) {
                        cards[i].classList.add('active');
                    }
                }

                // Mengatur tombol navbar yang aktif
                var buttons = document.getElementsByClassName('btn');
                for (var j = 0; j < buttons.length; j++) {
                    buttons[j].classList.remove('active');
                }
                event.target.classList.add('active');
            }

            // Menampilkan semua kartu saat pertama kali
            document.addEventListener('DOMContentLoaded', function () {
                filterCards('all');
            });
        </script>

